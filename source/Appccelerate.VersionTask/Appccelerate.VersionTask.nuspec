<?xml version="1.0"?>
<package xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <metadata xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <id>Appccelerate.VersionTask</id>
    <version>0.0.0.0</version>
    <title>Appccelerate.VersionTask</title>
    <authors>Appccelerate</authors>
    <owners>Appccelerate</owners>
    <licenseUrl>http://www.apache.org/licenses/LICENSE-2.0.html</licenseUrl>
    <projectUrl>https://github.com/appccelerate/Version</projectUrl>
    <iconUrl>https://github.com/appccelerate/appccelerate/raw/master/docs/nuget.png</iconUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <summary>MSBuild task for automatic versioning of assemblies.</summary>
    <description>MSBuild task for automatic versioning of assemblies.</description>
    <copyright>Copyright 2014-2017</copyright>
    <tags>Appccelerate, MSBuild</tags>
    <developmentDependency>true</developmentDependency>
    <dependencies>
      <dependency id="LibGit2Sharp" version="0.25.2.0" />
      <dependency id="Newtonsoft.Json" version="9.0.1" />
    </dependencies>
    <releaseNotes>
      1.40: supports .net core as a target platform
      1.32.0: VersionTask is now nicely to the incremental build feature and does not break it anymore. Many thanks to Blair L Murri https://github.com/bmurri.
      1.29.0: You can now specify a fileVersion in case you want it to be different from the assembly version. Use the tag in this way "v=1.{0};fv=1.1.{0}". Many thanks to Ivan Appert https://github.com/iappert.
    </releaseNotes>
  </metadata>
  <files>
    <file src="bin\Release\**" target="lib"/>
    <file src="build\**" target="build" />
    <file src="buildMultiTargeting\**" target="buildMultiTargeting" />
  </files>

</package>